<%= turbo_frame_tag tweet do %>

  <% if tweet.persisted? %>
    <h2>Editing Tweet</h2>
  <% end %>

  <%= form_with(model: tweet) do |form| %>
    <% if tweet.errors.any? %>
      <div class="mt-2 text-red-500">
        <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>
        <ul>
          <% tweet.errors.each do |error| %>
            <li class="mt-2"><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mt-2">
      <%= form.label :body, class: "sr-only" %>
      <%= form.text_area :body, class: "shadow-sm block w-full sm:text-sm border border-gray-300 rounded-md p-2" %>
    </div>
    <div class="mt-3 flex items-center justify-end space-x-3">
      <%= link_to "Cancel", tweet, class: "btn btn-primary" if tweet.persisted? %>
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>
