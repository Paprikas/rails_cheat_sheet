<%= turbo_frame_tag tweet do %>
  <div class="flow-root mt-6">
    <ul class="-my-5 divide-y divide-gray-200">
      <li class="py-5">
        <div class="relative">
          <p class="mt-1 text-sm text-gray-600 ">
            <%= tweet.body %>
          </p>
          <div class="mt-2 flex items-center justify-between text-sm">
            <div>
              <%= tweet.likes_count %> likes
            </div>
            <div class="space-x-3">
              <%= link_to 'Edit', edit_tweet_path(tweet) %> <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>
<% end %>
