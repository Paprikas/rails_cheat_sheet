<div class="flex items-center justify-center mt-4">
  <div class="bg-white p-8 rounded shadow-lg w-full md:w-1/2">
    <h1 class="text-2xl mb-4">Absurd advice generator</h1>
    <%= form_with url: absurd_generator_index_path, method: "post", class: "space-y-4" do |form| %>
      <div>
        <%= form.label :keywords, "Keywords", class: "block font-semibold" %>
        <%= form.text_field :keywords, class: "w-full p-2 border border-gray-300 rounded", placeholder: "relationship, motivation", value: params[:keywords] %>
      </div>
      <div>
        <%= form.submit "Generate advice", class: "bg-blue-500 text-white font-semibold px-4 py-2 rounded hover:bg-blue-600 disabled:opacity-50" %>
      </div>
    <% end %>

    <%= render "advice" %>
  </div>
</div>
